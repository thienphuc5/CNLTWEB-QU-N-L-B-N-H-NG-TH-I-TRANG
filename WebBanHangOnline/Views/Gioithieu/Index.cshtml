<!-- CSS tùy chỉnh cho trang -->
<style>
    .intro-header {
        position: relative;
        background: url('~/Content/assets/images/banner.jpg') no-repeat center center;
        background-size: cover;
        height: 400px;
        color: white;
        text-align: center;
        padding-top: 100px;
    }

    .intro-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }

    .intro-title {
        font-size: 3rem;
        margin-bottom: 10px;
        position: relative;
        z-index: 2;
    }

    .intro-subtitle {
        font-size: 1.5rem;
        position: relative;
        z-index: 2;
    }

    .about-section, .mission-section {
        padding: 50px 0;
        background: #f9f9f9;
    }

    .about-content {
        display: flex;
        align-items: center;
        gap: 30px;
    }

    .about-image img {
        max-width: 100%;
        border-radius: 10px;
    }

    .about-text {
        flex: 1;
    }

    .btn-primary {
        background-color: #e91e63;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #c2185b;
        }

    .mission-items {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }

    .mission-item {
        text-align: center;
        max-width: 30%;
    }

        .mission-item i {
            font-size: 2rem;
            color: #e91e63;
            margin-bottom: 10px;
        }

    .footer-section {
        background: #333;
        color: white;
        text-align: center;
        padding: 20px 0;
    }

    .social-links {
        margin-top: 10px;
    }

    .social-icon {
        color: white;
        margin: 0 10px;
        font-size: 1.5rem;
        text-decoration: none;
    }

        .social-icon:hover {
            color: #e91e63;
        }
    .policy-section {
        padding: 20px 0;
        background: #f1f1f1;
    }

    .policy-items {
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-wrap: wrap;
    }

    .policy-item {
        text-align: center;
        max-width: 20%;
        padding: 10px;
    }

        .policy-item i {
            font-size: 2rem;
            color: #e91e63;
            margin-bottom: 10px;
        }

        .policy-item h3 {
            font-size: 1.1rem;
            margin-bottom: 5px;
            color: #333;
        }

        .policy-item p {
            font-size: 0.9rem;
            color: #666;
        }
</style>